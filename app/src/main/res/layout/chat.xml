<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/your_root_layout_id"
	android:fitsSystemWindows="false"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">


	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:gravity="right|center_vertical"
		android:orientation="horizontal"
		android:layout_gravity="center_horizontal|center_vertical">
		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/circleimageview5"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:src="@drawable/app_icon"
			android:layout_gravity="center_horizontal|center_vertical"
			app:civ_border_width="0dp"
			app:civ_border_color="#008ECD"

			app:civ_border_overlay="true" />
		<TextView
			android:id="@+id/textview2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Cleo"
			android:textSize="21sp"
			android:singleLine="true"
			android:textStyle="bold"
			/>
		<TextView
			android:id="@+id/textview3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="bottom"
			android:text=" "
			android:textSize="10sp"
			android:textStyle="bold"
			android:textColor="#000000"
			android:layout_gravity="bottom"
			android:layout_weight="1" />
		<TextView
			android:id="@+id/coinView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="0dp"
			android:text=""
			android:textStyle="bold"
			android:shadowColor="#EF1313"
			android:textSize="21sp"
			android:textColor="#000000" />

		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/circleimageview4"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/pic_settings"
			app:civ_border_width="0dp"
			app:civ_border_color="#008DCD"

			app:civ_border_overlay="true" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:id="@+id/bannerContainer"
		android:orientation="horizontal"
		android:layout_gravity="center_horizontal|center_vertical"/>

	<ListView
		android:id="@+id/listview1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:choiceMode="none"
		android:layout_weight="1" />
	<LinearLayout
		android:id="@+id/linear6"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="4dp"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="horizontal"
		android:layout_gravity="center_horizontal|center_vertical">
		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/circleimageview3"
			android:layout_width="45dp"
			android:layout_height="45dp"
			android:src="@drawable/app_icon"
			app:civ_border_width="0dp"
			app:civ_border_color="#008DCD"

			app:civ_border_overlay="true" />
		<TextView
			android:id="@+id/textview1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="â€¦"
			android:textSize="16sp"
			android:textStyle="bold"

			android:layout_weight="1" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linear2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="3dp"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="horizontal"
		android:layout_gravity="center_horizontal|center_vertical">
		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/dovoiceon"
			android:layout_width="0dp"
			android:layout_height="35dp"
			android:src="@drawable/pic_voice"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_weight="1"
			app:civ_border_width="1dp"
			app:civ_border_color="#008DCD"

			app:civ_border_overlay="true" />
		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/dovoiceoff"
			android:layout_width="0dp"
			android:layout_height="35dp"
			android:src="@drawable/pic_voice_off"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_weight="1"
			app:civ_border_width="1dp"
			app:civ_border_color="#008DCD"

			app:civ_border_overlay="true" />

		<ImageView
			android:id="@+id/delChat"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:src="@android:drawable/ic_menu_delete"
			android:layout_marginLeft="8dp"
			android:contentDescription="Edit Model" />

		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/commandimageview"
			android:layout_width="0dp"
			android:layout_height="24dp"
			android:src="@drawable/command"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_weight="1"
			app:civ_border_width="1dp"
			app:civ_border_color="#008DCD"

			app:civ_border_overlay="true" />
		<Spinner
			android:id="@+id/spinner1"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:spinnerMode="dropdown" />
		<AutoCompleteTextView
			android:id="@+id/edittext1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="top|left"
			android:textSize="12sp"

			android:hint="Write your message"
			android:completionThreshold="1"

			android:minLines="1"
			android:maxLines="3"
			android:inputType="textMultiLine"

			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_weight="999" />
		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/circleimageview2"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:src="@drawable/pic_send"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_weight="1"
			app:civ_border_width="0dp"
			app:civ_border_color="#008DCD"

			app:civ_border_overlay="true" />
	</LinearLayout>

</LinearLayout>
